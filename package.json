{
  "name": "openbridge-components",
  "version": "0.1.0",
  "scripts": {
    "start": "npm run storybook",
    "test": "npm-run-all css lint bundlesize",
    "bundlesize": "bundlesize",
    "css": "npm-run-all css-lint css-compile css-minify",
    "css-compile": "npm-run-all --parallel css-compile-*",
    "css-compile-main": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/openbridge.scss dist/css/openbridge.css",
    "css-compile-bright": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/variables-bright.scss dist/css/openbridge-bright.css",
    "css-compile-day": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/variables-day.scss dist/css/openbridge-day.css",
    "css-compile-dusk": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/variables-dusk.scss dist/css/openbridge-dusk.css",
    "css-compile-night": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/variables-night.scss dist/css/openbridge-night.css",
    "css-lint": "npm-run-all --parallel css-lint-*",
    "css-lint-main": "stylelint \"scss/**/*.scss\" --fix",
    "xcss-lint-vars": "fusv scss",
    "css-minify": "npm-run-all --parallel css-minify-*",
    "css-minify-main": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/css/openbridge.min.css dist/css/openbridge.css",
    "css-minify-bright": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/css/openbridge-bright.min.css dist/css/openbridge-bright.css",
    "css-minify-day": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/css/openbridge-day.min.css dist/css/openbridge-day.css",
    "css-minify-dusk": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/css/openbridge-dusk.min.css dist/css/openbridge-dusk.css",
    "css-minify-night": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/css/openbridge-night.min.css dist/css/openbridge-night.css",
    "lint": "npm-run-all --parallel css-lint",
    "update-deps": "ncu -x bundlesize && npm update",
    "dist": "npm-run-all --parallel css",
    "test-all": "npm-run-all lint dist test bundlesize",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css": "nodemon --watch scss/ --ext scss --exec \"npm run css-main\"",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o public/storybook"
  },
  "license": "SEE LICENSE IN license.txt",
  "dependencies": {
    "@storybook/addon-backgrounds": "^5.3.18",
    "@storybook/addon-cssresources": "6.0.0-alpha.37"
  },
  "peerDependencies": {
    "@types/node": "^8.10.54",
    "nodemon": "^1.19.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@storybook/addon-a11y": "^5.3.17",
    "@storybook/addon-actions": "^5.3.17",
    "@storybook/addon-links": "^5.3.17",
    "@storybook/addon-notes": "^5.3.17",
    "@storybook/addon-storysource": "^5.3.17",
    "@storybook/addons": "^5.3.17",
    "@storybook/html": "^5.3.17",
    "@storybook/source-loader": "^5.3.17",
    "autoprefixer": "^8.1.0",
    "babel-loader": "^8.0.6",
    "bundlesize": "^0.18.0",
    "check-npm": "^1.0.0",
    "clean-css-cli": "^4.3.0",
    "cross-env": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-mocha": "^6.3.0",
    "find-unused-sass-variables": "0.3.3",
    "html-loader": "^0.5.5",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "node-sass": "^4.13.1",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "quixote": "^0.14.0",
    "sass-loader": "^8.0.2",
    "shx": "^0.3.2",
    "string-replace-loader": "^2.2.0",
    "stylelint": "^10.1.0",
    "stylelint-config-twbs-bootstrap": "^0.3.1",
    "stylelint-declaration-use-variable": "^1.7.2",
    "stylelint-no-px": "^0.12.1",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "to-string-loader": "^1.1.6"
  },
  "bundlesize": [
    {
      "path": "./dist/css/openbridge.css",
      "maxSize": "20 kB"
    },
    {
      "path": "./dist/css/openbridge.min.css",
      "maxSize": "3 kB"
    }
  ]
}
