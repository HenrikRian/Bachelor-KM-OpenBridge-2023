{
  "name": "openbridge-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "ng-start": "ng serve",
    "build": "ng build",
    "build:lib": "ng-packagr -p projects/openbridge-components/ng-package.json",
    "ng-test": "ng test",
    "test": "npm-run-all css-main test-once-headless lint bundlesize",
    "test-once-headless": "ng test --watch=false --browsers=ChromeHeadless",
    "test-e2e": "ng e2e",
    "start": "npm-run-all --parallel watch ng-start",
    "start-day": "ng serve openbridge-demo-day",
    "e2e": "ng e2e",
    "linkinator": "linkinator _gh_pages --recurse --silent --skip \"^(?!http://localhost)\"",
    "bundlesize": "bundlesize",
    "css": "npm-run-all css-compile css-prefix css-minify",
    "css-main": "npm-run-all css-compile css-copy css-lint css-prefix css-minify",
    "css-compile": "npm-run-all --parallel css-compile-*",
    "css-compile-main": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/openbridge.scss dist/css/openbridge.css",
    "css-compile-day": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/variables-day.scss dist/css/openbridge-bright.css",
    "css-copy": "cross-env-shell shx cp -r dist/css/* projects/openbridge-components/src/assets/styles/",
    "css-copy-web-components": "cross-env-shell shx cp -r dist/css/* openbridge-components/demos/assets/styles/",
    "css-lint": "npm-run-all --parallel css-lint-*",
    "css-lint-main": "stylelint \"scss/**/*.scss\" --fix",
    "css-lint-vars": "fusv scss",
    "css-minify": "npm-run-all --parallel css-minify-*",
    "css-minify-day": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/css/openbridge-day.min.css dist/css/openbridge-day.css",
    "css-minify-dusk": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/css/openbridge-dusk.min.css dist/css/openbridge-dusk.css",
    "css-prefix": "npm-run-all --parallel css-prefix-*",
    "css-prefix-main": "postcss --config build/postcss.config.js --replace \"dist/css/*.css\" \"!dist/css/*.min.css\"",
    "lint": "npm-run-all --parallel css-lint ng-lint",
    "ng-lint": "ng lint",
    "update-deps": "ncu -a -x bundlesize && npm update",
    "release": "npm-run-all dist release-sri release-zip",
    "release-sri": "node build/generate-sri.js",
    "release-version": "node build/change-version.js",
    "release-zip": "cross-env-shell \"shx rm -rf openbridge-$npm_package_version-dist && shx cp -r dist/ openbridge-$npm_package_version-dist && zip -r9 openbridge-$npm_package_version-dist.zip openbridge-$npm_package_version-dist && shx rm -rf openbridge-$npm_package_version-dist\"",
    "dist": "npm-run-all --parallel css",
    "test-all": "npm-run-all lint dist test bundlesize",
    "netlify": "npm run dist && npm run release-sri",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css": "nodemon --watch scss/ --ext scss --exec \"npm run css-main\"",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o public/storybook"
  },
  "private": true,
  "dependencies": {},
  "peerDependencies": {
    "@types/node": "^8.10.54",
    "material-icons": "^0.3.1",
    "nodemon": "^1.19.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@storybook/addon-a11y": "^5.2.8",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/addon-notes": "^5.2.8",
    "@storybook/addon-storysource": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/html": "^5.3.14",
    "@storybook/source-loader": "^5.2.8",
    "autoprefixer": "^8.1.0",
    "babel-loader": "^8.0.6",
    "bundlesize": "^0.18.0",
    "check-npm": "^1.0.0",
    "clean-css-cli": "^4.3.0",
    "cross-env": "^5.2.0",
    "eslint": "^6.6.0",
    "eslint-plugin-mocha": "^6.2.1",
    "find-unused-sass-variables": "0.3.3",
    "hammerjs": "^2.0.8",
    "html-loader": "^0.5.5",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "material-design-icons": "^3.0.1",
    "material-icons": "^0.3.1",
    "node-sass": "^4.13.1",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "postcss-loader": "^3.0.0",
    "quixote": "^0.14.0",
    "sass-loader": "^8.0.2",
    "shx": "^0.3.2",
    "string-replace-loader": "^2.2.0",
    "stylelint": "^10.1.0",
    "stylelint-config-twbs-bootstrap": "^0.3.1",
    "stylelint-declaration-use-variable": "^1.7.2",
    "stylelint-no-px": "^0.12.1",
    "to-string-loader": "^1.1.5"
  },
  "bundlesize": [
    {
      "path": "./dist/css/openbridge-day.css",
      "maxSize": "20 kB"
    },
    {
      "path": "./dist/css/openbridge-day.min.css",
      "maxSize": "2 kB"
    }
  ]
}
